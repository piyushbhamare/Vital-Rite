<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vital Rite</title>
    <link rel="stylesheet" href="/css/userappointments.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" 
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .link {
        text-align: center;
        display: block; /* Ensure the link takes up the full width */
        }
    </style>
</head>
<body>
    <%- include('partials/header_user') %>
    <div class="appointment_page">
        <form action="#" method="post">
            <div class="topnav">
                <input type="text" name="search" placeholder="Search..">
            </div>
        </form>
        <% if (locals.data) { %>
            <div class="confirm-appointment appointment">
                <header class="heading">Appointment</header>
                <h3 class="content">Confirm Your Appointment with 
                    <span><%= data%></span>
                </h3>
                <a href="/paitentdetails" class="link">Click Here</a>
            </div>
        <% } %>

        <% if (locals.error) {%>
            <header class="heading">Appointment</header>
            <div id="tag-error" class="content tag-error">
              <h3><%= error %></h3>
            </div>
        <% } %>

        <div class="appointment">
            <header class="heading h-appointment">Appointment</header>
            <h3 class="content c-appointment">You don't have any Appointments.</h3>
        </div>

        <div class="appointment">
            <header class="heading h-online">Online Consultation</header>
            <h3 class="content c-online">You don't have any Online Consultations.</h3>
        </div>
    </div>
    <script>
        document.getElementById('btn').addEventListener("click", function() {
            var name = document.querySelector('.confirm-appointment span').innerText;
            document.querySelector('.confirm-appointment').style.display = 'none';
            document.querySelector('.c-appointment').innerText = name;
            alert("Appointment Booked");
        });
    </script>
    <%- include('partials/footer') %>
</body>
</html>
